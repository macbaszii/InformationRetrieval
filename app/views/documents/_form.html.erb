<%= form_for @document, :html => { :class => 'form-horizontal' } do |f| %>
  <ul class="nav nav-tabs">
    <li class="active">
      <a href="#text" data-toggle="tab">Text Input</a>
    </li>
    <li><a href="#url" data-toggle="tab">URL to Crawling</a></li>
    <li><a href="#pdf" data-toggle="tab">Upload PDF</a></li>
  </ul>
  <div class="control-group">
    <%= f.label :metadata, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :metadata, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                documents_path, :class => 'btn' %>
  </div>
<% end %>
